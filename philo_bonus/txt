# Basic process check
valgrind --tool=memcheck --trace-children=yes ./philo_bonus 4 410 200 200

# Data race detection
valgrind --tool=drd --trace-children=yes ./philo_bonus 4 410 200 200

# Semaphore specific checks
valgrind --tool=helgrind --trace-children=yes ./philo_bonus 4 410 200 200

# Most comprehensive check
valgrind --tool=drd --trace-children=yes --trace-semaphore=yes --trace-fork-join=yes ./philo_bonus 4 410 200 200